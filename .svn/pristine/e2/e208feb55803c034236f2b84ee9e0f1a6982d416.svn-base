/*
客户业务信息
*/
.msg-title{
    font-size: 20px;
    color: #fff;
    background-color: #5FB4D6;
    line-height: 50px;
    text-align: center;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin: 0;
}
.basicInformation,.businessInformation{
    background-color: #F4F7FC;
    color: #6d798d;
    font-size: 16px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    height: 265px;
    background-color: #fff;
}
.basic-title-box .basic-title,.basicInformation{
    float: left;
    width: 240px;
}
.basic-title-box .business-title,.businessInformation{
    float: right;
    width: calc(100% - (240px + 20px));
}
.businessInformation .slider{
    /*padding: 14px 14px 12px 14px;*/
    /*height: 190px;*/
}

.slide_padding{
    padding: 20px 10px;
}
.slide_in{
    border: 1px solid #EAEDF4;
}
.msg-content{
    padding: 24px 40px 0px 40px;
}
.msg-content li{
    color: #6d798d;
    font-size: 16px;
    margin-bottom: 10px;
}
.msg-btn{
    margin: 24px 0px 34px 0px;
}
.msg-btn button{
    width: 150px;
    height: 38px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    color: #fff;
    background: url("../img/btn_150X38.png") no-repeat;
}
.msg-btn button:hover{
    background: url("../img/btn_150X38_hover.png") no-repeat;
    color: #fff;
}
.text-dotted{
    /*border-bottom: 2px dotted #6D798D;*/
}
.text-center-box{
    /*column-count:2;*/
    /*-moz-column-count:2;*/
    /*-webkit-column-count:2;*/
    padding: 22px;
    height: 160px;
    overflow-y: scroll;
}
.slide{

    height: 100%;
}
.slide p.slide-title{
    line-height: 50px;
    text-align: center;
    color: #525c6d;
    font-size: 16px;
    background-color: #F4F7FC;
}