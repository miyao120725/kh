*{
    box-sizing:border-box;
}
@charset "UTF-8";
body,ul,ol,p,h1,h2,h3,h4,h5,dl,dd,input,textarea,td,th,button,strong,em,select,header,section,footer{margin:0;padding:0;}
li{list-style:none;vertical-align:top;}
table{ border-collapse:collapse;}
textarea,input{resize:none;overflow:hidden; outline:none;}
img{ border:none; vertical-align:middle;}
em{ font-style:normal;}
a{ text-decoration:none;
}
a,input,button{
    /*-webkit-tap-highlight-color:rgba(0,0,0,0);!*ios androidȥ���Դ���Ӱ����ʽ*!*/
    /*outline:none!important;*/
    text-decoration: none;
    font-family: 'Microsoft Yahei' !important;
    margin:0;
}
input:focus{
    outline: none!important;
    box-shadow: none!important;
}
html, body {
    -webkit-user-select: none;   /* ��ֹѡ���ı� */
    user-select: none;
    font-family: 'Microsoft Yahei'!important;
    /*font-weight: bold;*/
    max-width: 100%;
    height:100%;
    /*overflow: hidden;*/
}
.clear:after{
   display:block;
   content:'';
   clear:both;
}
.lf{
	float:left;
}
.rt{
	float:right;
}